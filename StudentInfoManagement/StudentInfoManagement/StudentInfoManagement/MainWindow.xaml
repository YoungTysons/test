<Window x:Class="StudentInfoManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SIS Dashboard Demo" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#1D4ED8"/>
        <SolidColorBrush x:Key="TextDark" Color="#111827"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F3F4F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="20">
                    <TextBlock Text="DTP System" FontSize="36" FontWeight="Bold" VerticalAlignment="Center"/>
                </DockPanel>

                <StackPanel Grid.Row="1" Margin="15,0">
                    <Button x:Name="BtnDashboard" Style="{StaticResource MenuButtonStyle}" Click="MenuButton_Click" Tag="Dashboard" Height="66">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" Margin="0,2,10,0" VerticalAlignment="Center" FontSize="24"/>
                            <TextBlock Text="Dashboard" FontSize="24"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnStudents" Style="{StaticResource MenuButtonStyle}" Click="MenuButton_Click" Tag="Students" Height="66">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" Margin="0,2,10,0" VerticalAlignment="Center" FontSize="24"/>
                            <TextBlock Text="Students" FontSize="24"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnCourses" Style="{StaticResource MenuButtonStyle}" Click="MenuButton_Click" Tag="Courses" Height="66">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE82D;" FontFamily="Segoe MDL2 Assets" Margin="0,2,10,0" VerticalAlignment="Center" FontSize="24"/>
                            <TextBlock Text="Courses" FontSize="24"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnPortal" Style="{StaticResource MenuButtonStyle}" Click="MenuButton_Click" Tag="Portal" Height="66">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets" Margin="0,2,10,0" VerticalAlignment="Center" FontSize="24"/>
                            <TextBlock Text="Student Portal" FontSize="24"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnSettings" Style="{StaticResource MenuButtonStyle}" Click="MenuButton_Click" Tag="Settings" Height="66">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" Margin="0,2,10,0" VerticalAlignment="Center" FontSize="24"/>
                            <TextBlock Text="Settings" FontSize="24"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                    <Border BorderThickness="0,1,0,0" BorderBrush="#F3F4F6" Margin="10,0,10,10"/>

                    <Button Style="{StaticResource MenuButtonStyle}" 
                            Margin="15,0,15,10" 
                            Height="66" 
                            Click="BtnLogout_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" Margin="0,2,10,0" VerticalAlignment="Center" FontSize="24" Foreground="#DC2626"/>
                            <TextBlock Text="Đăng xuất" FontSize="24" Foreground="#DC2626"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Border Width="40" Height="40" CornerRadius="20" Background="{StaticResource PrimaryBlue}" HorizontalAlignment="Right">
                    <TextBlock Text="AVT" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </Grid>

            <ContentControl x:Name="MainContent" Grid.Row="1" Focusable="False"/>
        </Grid>
    </Grid>
</Window>